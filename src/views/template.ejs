<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice PDF</title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      h1 {
        color: #333;
      }
      p {
        font-size: 14px;
      }
      .content {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <h1>Invoice for <%= name %></h1>
    <p>Date: <%= date %></p>
    <div class="content">
      <h2>Item Details</h2>
      <ul>
        <% items.forEach(function(item) { %>
          <li><%= item.name %> - $<%= item.price %></li>
        <% }); %>
      </ul>
      <p>Total: $<%= total %></p>
    </div>
  </body>
</html>
